#!/bin/bash

# Post-merge hook: runs after git pull
# Auto-triggers deploy script

RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m'

echo ""
echo -e "${BLUE}================================${NC}"
echo -e "${BLUE}   Git Pull Completed${NC}"
echo -e "${BLUE}================================${NC}"
echo ""

# Check which files were changed
CHANGED_FILES=$(git diff-tree -r --name-only --no-commit-id ORIG_HEAD HEAD)

# Detect which services need rebuild
REBUILD_FRONTEND=false
REBUILD_BACKEND=false
REBUILD_COLLECTOR=false

if echo "$CHANGED_FILES" | grep -q "^frontend/"; then
    REBUILD_FRONTEND=true
fi

if echo "$CHANGED_FILES" | grep -q "^backend/"; then
    REBUILD_BACKEND=true
fi

if echo "$CHANGED_FILES" | grep -q "^data-collector/"; then
    REBUILD_COLLECTOR=true
fi

# Show what changed
echo -e "${YELLOW}Changed files detected:${NC}"
if [ "$REBUILD_FRONTEND" = true ]; then
    echo -e "  ${GREEN}✓${NC} frontend/"
fi
if [ "$REBUILD_BACKEND" = true ]; then
    echo -e "  ${GREEN}✓${NC} backend/"
fi
if [ "$REBUILD_COLLECTOR" = true ]; then
    echo -e "  ${GREEN}✓${NC} data-collector/"
fi

# If nothing relevant changed
if [ "$REBUILD_FRONTEND" = false ] && [ "$REBUILD_BACKEND" = false ] && [ "$REBUILD_COLLECTOR" = false ]; then
    echo -e "  ${YELLOW}No service-related changes detected.${NC}"
    echo ""
    echo -n "Deploy anyway? (y/n) "
    read -r answer < /dev/tty
    if [[ ! "$answer" =~ ^[Yy]$ ]]; then
        echo -e "${YELLOW}Skipping deploy.${NC}"
        exit 0
    fi
fi

echo ""
echo -e "${YELLOW}Select deploy option:${NC}"
echo ""
echo "  [1] Deploy changed services only"
echo "  [2] Deploy all services"
echo "  [3] Interactive selection"
echo "  [4] Skip deploy"
echo ""
echo -n "Choice: "
read -r choice < /dev/tty

case "$choice" in
    1)
        SERVICES=()
        [ "$REBUILD_FRONTEND" = true ] && SERVICES+=("frontend")
        [ "$REBUILD_BACKEND" = true ] && SERVICES+=("backend")
        [ "$REBUILD_COLLECTOR" = true ] && SERVICES+=("data-collector")

        if [ ${#SERVICES[@]} -eq 0 ]; then
            echo -e "${YELLOW}No services to deploy.${NC}"
            exit 0
        fi

        echo -e "${GREEN}Deploying: ${SERVICES[*]}${NC}"
        ./scripts/deploy.sh build "${SERVICES[@]}"
        ;;
    2)
        echo -e "${GREEN}Deploying all services...${NC}"
        ./scripts/deploy.sh build frontend backend data-collector
        ;;
    3)
        ./scripts/deploy.sh build
        ;;
    4|*)
        echo -e "${YELLOW}Deploy skipped.${NC}"
        exit 0
        ;;
esac
